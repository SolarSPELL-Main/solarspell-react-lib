{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es2015",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx"
      },
    "include": [
        "src/**/*"
    ]
}
